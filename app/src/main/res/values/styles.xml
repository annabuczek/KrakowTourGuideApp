<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Action Bar Theme-->
    <style name="MyActionBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/colorTextLight</item>
    </style>

    <!--Launch Activity Style-->

    <style name="TextContainerStyle">
        <item name="android:layout_marginStart">@dimen/launch_ac_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/launch_ac_margin_horizontal</item>
        <item name="android:background">@color/colorTextContainer</item>
    </style>

    <style name="TextContainerStyleLarge" parent="TextContainerStyle">
        <item name="android:layout_marginStart">@dimen/launch_ac_margin_horizontal_large</item>
        <item name="android:layout_marginEnd">@dimen/launch_ac_margin_horizontal_large</item>
    </style>

    <style name="TextViewHeadingStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:padding">@dimen/launch_ac_text_padding</item>
    </style>

    <style name="TextViewHeadingStyleLarge" parent="TextViewHeadingStyle">
        <item name="android:textSize">45sp</item>
        <item name="android:padding">@dimen/launch_ac_text_padding_large</item>
    </style>

    <style name="TextViewBodyStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:padding">@dimen/launch_ac_text_padding</item>
    </style>

    <style name="TextViewBodyStyleLarge" parent="TextViewBodyStyle">
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/launch_ac_text_padding_large</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginStart">@dimen/launch_ac_margin_horizontal</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/launch_ac_margin_horizontal</item>
        <item name="android:paddingEnd">@dimen/launch_ac_margin_horizontal</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="ButtonStyleLarge" parent="ButtonStyle">
        <item name="android:layout_marginStart">@dimen/launch_ac_margin_horizontal_large</item>
    </style>


    <!--Navigation Drawer Styles-->
    <style name="NavigationDrawerHeaderStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:paddingTop">@dimen/nav_drawer_view_padding</item>
        <item name="android:paddingBottom">@dimen/nav_drawer_view_padding</item>
    </style>

    <style name="NavigationDrawerHeaderStyleLarge" parent="NavigationDrawerHeaderStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <!--Card View Style-->
    <style name="CardHeaderTextViewStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingTop">@dimen/card_view_padding_big</item>
        <item name="android:paddingBottom">@dimen/card_view_padding_main</item>
        <item name="android:paddingStart">@dimen/card_view_padding_main</item>
        <item name="android:paddingEnd">@dimen/card_view_padding_main</item>
    </style>
    <style name="CardBodyTextViewStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:paddingBottom">@dimen/card_view_padding_big</item>
        <item name="android:paddingStart">@dimen/card_view_padding_main</item>
        <item name="android:paddingEnd">@dimen/card_view_padding_main</item>
    </style>

    <style name="FavoriteButtonStyle">
        <item name="android:paddingTop">@dimen/card_view_padding_big</item>
        <item name="android:paddingBottom">@dimen/card_view_padding_main</item>
        <item name="android:paddingStart">@dimen/card_view_padding_main</item>
        <item name="android:paddingEnd">@dimen/card_view_padding_main</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--Tabs Style-->
    <style name="TabsStyle" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabMaxWidth">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>
    
    <!--Divider Style-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--Home Fragment Style-->
    <style name="HomeTextViewStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <!--Detail Activity Style-->
    <style name="DetailTitleTextViewStyle">
        <item name="android:padding">@dimen/detail_padding_big</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DetailBodyTextViewStyle">
        <item name="android:padding">@dimen/detail_padding_big</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="DetailDescriptionTextViewStyle" parent="DetailBodyTextViewStyle">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="DetailButtonStyle">
        <item name="android:background">?android:selectableItemBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
